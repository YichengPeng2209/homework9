{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 640,
  "height": 400,
  "title": "People Happiness Around The World 2020",
  


  "data": {
    "url": "https://raw.githubusercontent.com/YichengPeng2209/homework9/main/js/world_geo.topojson",
    "format": {
          "type": "topojson",
          "feature": "custom.geo"
        }
  },
  "transform": [{
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/YichengPeng2209/homework9/main/data/2020.csv"
        },
        "key": "Country",
        "fields": ["Ladderscore"]
      }
    }
  ],
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape"
    },
  "encoding": {
    "color": {
      "field": "Ladderscore",
      "type": "quantitative",
      "scale": {"type": "threshold","domain":[2,4,6,8],"range":["#fcf0ec","#ffd4c1","#ff9261","#fc8149"]}
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "Country"},
      {"field": "Ladderscore", "type": "quantitative"}
    ]
  }
}